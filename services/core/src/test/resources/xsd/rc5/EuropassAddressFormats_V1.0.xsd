	<xsd:simpleType name="AddressFieldFormatPattern">
		<xsd:annotation>
			<xsd:documentation xml:lang="en">
				
				IMPORTANT: \n denotes a new line.
			</xsd:documentation>
		</xsd:annotation>
		<xsd:restriction base="xsd:string">
			<xsd:enumeration value="s \n z m (c)">
				<xsd:annotation>
					<xsd:documentation xml:lang="en">Default Address Format</xsd:documentation>
				</xsd:annotation>
			</xsd:enumeration>
			<xsd:enumeration value="s p-z m (c)">
				<xsd:annotation>
					<xsd:documentation xml:lang="en">Default Address Format for Organisations</xsd:documentation>
				</xsd:annotation>
			</xsd:enumeration>
			<xsd:enumeration value="s \n p-z m (c)">
				<xsd:annotation>
					<xsd:documentation xml:lang="en">Address Format for BE-Belgium</xsd:documentation>
				</xsd:annotation>
			</xsd:enumeration>
			<xsd:enumeration value="s \n p-z m (c)">
				<xsd:annotation>
					<xsd:documentation xml:lang="en">Address Format for GR-Greece</xsd:documentation>
				</xsd:annotation>
			</xsd:enumeration>
			<!-- To be completed with the rest of the countries -->
		</xsd:restriction>
	</xsd:simpleType>

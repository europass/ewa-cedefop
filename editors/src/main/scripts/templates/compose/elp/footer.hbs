<footer>	
	
	<div class="elp footer-info">
		<div class="elp-info">
			<div>{{get_text "ELP.Document.Footer.Asterisk" group="DocumentLabel"}}</div>
			<div>{{get_text "ELP.Document.Footer.Council" group="DocumentLabel"}}</div>
		</div>		
		<div class="portfolio-logo"></div>
	</div>
	
	<div class="elp document">	
		<span class="document-copyright">{{get_text "Document.Footer.EuropeanUnionCouncil" group="DocumentLabel"}}</span>
		<span class="document-europass-link">
            {{#if_eq locale compare="sr-cyr"}}
                <a href="http://europass.cedefop.europa.eu/legal-notice"
                   title="{{get_text "/ewa/ewa-global/footer/legal-notice" group="GuiLabel"}}"
                   target="_blank">{{get_text "/ewa/ewa-global/footer/legal-notice" group="GuiLabel"}}</a>
            {{else}}
                {{#if_eq locale compare="sr-lat"}}
                    <a href="http://europass.cedefop.europa.eu/legal-notice"
                       title="{{get_text "/ewa/ewa-global/footer/legal-notice" group="GuiLabel"}}"
                       target="_blank">{{get_text "/ewa/ewa-global/footer/legal-notice" group="GuiLabel"}}</a>
                {{ else }}
                    <a href="http://europass.cedefop.europa.eu/{{locale}}/legal-notice"
                       title="{{get_text "/ewa/ewa-global/footer/legal-notice" group="GuiLabel"}}"
                       target="_blank">{{get_text "/ewa/ewa-global/footer/legal-notice" group="GuiLabel"}}</a>
                {{/if_eq}}
            {{/if_eq}}
		</span>
	</div>



<dt class="label">
        <button type="button" name="enablePageBreak" 
            class="enablePageBreak sectionBreak tip spot tip-removeLeft--10pixels tip-closerTop {{#if_contains Preferences.LearnerInfo.pageBreaks compare="SkillsDriving"}}break-page{{/if_contains}}" 
            data-section="SkillsDriving"
            data-tip.position="top-left">Page Break
            <span class="data-title" style="display:none;">
                {{#if_contains Preferences.LearnerInfo.pageBreaks compare="SkillsDriving"}}{{get_text "Remove.Page.Break" group="EditorHelp"}}{{/if_contains}}
                {{#if_absent Preferences.LearnerInfo.pageBreaks compare="SkillsDriving"}}{{get_text "Insert.Page.Break" group="EditorHelp"}}{{/if_absent}}
            </span>
        </button>
	<span class="title">{{get_text "LearnerInfo.Skills.Driving" group="DocumentLabel"}}</span>
</dt>

<dd class="value">
	{{#isSectionWithAttachmentsEmpty SkillsPassport.LearnerInfo.Skills.Driving}}
		<div class="empty add"><span>{{get_text "Buttons.Add.Content" group="GuiLabel"}}</span></div>
	{{else}}	
		<div class="Driving">
			{{#simple_each_with_index SkillsPassport.LearnerInfo.Skills.Driving.Description}}
                    <span class="Driving">
                        {{value}}{{^if_last_item ../../SkillsPassport.LearnerInfo.Skills.Driving.Description.length compare=index}},{{/if_last_item}}
                    </span>
			{{/simple_each_with_index}}
		</div>
		
		
		{{#if SkillsPassport.LearnerInfo.Skills.Driving.ReferenceTo}}
			<div class="attachment">
				<span class="attachment inner-content-label">{{get_text "LearnerInfo.Skills.Driving.ReferenceTo" group="DocumentLabel"}}</span>
				{{#each_with_index SkillsPassport.LearnerInfo.Skills.Driving.ReferenceTo}}
					{{#with_attachment ../../SkillsPassport.Attachment idref}}
						<span class="linked-attachment" name="{{Name}}">
						{{#if_gt ../index compare="0"}}, {{/if_gt}}
						{{#crop_text Description}}{{.}}{{/crop_text}}
						</span>
					{{/with_attachment }}
				{{/each_with_index}}
			</div>
		{{/if}} 
		
		{{#call_partial SkillsPassport.LearnerInfo.Skills.Driving path="LearnerInfo.Skills.Driving" subsection="Driving" withAttachments="true"}}
			{{> templates/menu/itemmenu}}
		{{/call_partial}}
		
	{{/isSectionWithAttachmentsEmpty}}

</dd>


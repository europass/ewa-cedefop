<dt class="label list section-heading">
    <button type="button" name="enablePageBreak" 
        class="enablePageBreak sectionBreak tip spot tip-removeLeft--10pixels tip-closerTop {{#if_contains Preferences.LearnerInfo.pageBreaks compare="ReferenceTo"}}break-page{{/if_contains}}" 
        data-section="ReferenceTo"
        data-tip.position="top-left">Page Break
        <span class="data-title" style="display:none;">
            {{#if_contains Preferences.LearnerInfo.pageBreaks compare="ReferenceTo"}}{{get_text "Remove.Page.Break" group="EditorHelp"}}{{/if_contains}}
            {{#if_absent Preferences.LearnerInfo.pageBreaks compare="ReferenceTo"}}{{get_text "Insert.Page.Break" group="EditorHelp"}}{{/if_absent}}
        </span>
    </button>
    <span class="title">{{get_text "LearnerInfo.ReferenceTo" group="DocumentLabel"}}</span>
</dt>

<dd class="line"></dd>
	
<ol class="sortable compose-list" 
	id="List:SkillsPassport.LearnerInfo.ReferenceTo" 
	data-rel-section="SkillsPassport.LearnerInfo.ReferenceTo">
	
	{{#isEmptyObject SkillsPassport.LearnerInfo.ReferenceTo}}
		<li class="compose-list " 
			id="ListItem:LearnerInfo.ReferenceTo.Empty">
			<button type="button" 
					name="Attachment_add_btn" 
					class="section compose-list opens-modal-form add empty" 
					data-rel-doc="attachment"
					data-rel-clazz="AttachmentFormView"
					data-rel-form="Form:Attachment"
					data-rel-section="SkillsPassport.LearnerInfo.ReferenceTo"
					data-rel-help-section="Help.Add.ECV.Attachment"
					data-rel-index="0"
					data-rel-document="ECV">
				    <span class="img-placeholder">&nbsp;</span>
					<span>{{get_text "Buttons.Add.Content" group="GuiLabel"}}</span>
					</button>
		</li>
	{{else}}
		{{#each_with_index SkillsPassport.LearnerInfo.ReferenceTo}}				
				
				<li class="compose-list list-item opens-modal-form"
					id="ListItem:LearnerInfo.ReferenceTo[{{index}}]"
					data-index="{{index}}"
					data-rel-doc="attachment"
					data-rel-clazz="AttachmentEditFormView"
					data-rel-form="Form:ReferenceTo[{{index}}]"
                    data-rel-section="SkillsPassport.LearnerInfo.ReferenceTo[{{index}}]"
                    data-rel-help-section="Help.SkillsPassport.LearnerInfo.ReferenceTo"
					data-rel-index="{{index}}"
					data-rel-document="ECV">
				
					{{#with_attachment ../../SkillsPassport.Attachment idref}}
						<a href="{{TempURI}}"
						   class="ReferenceTo"
						   target="_blank"
						   name="{{Name}}">{{#crop_text Description size="max"}}{{.}}{{/crop_text}}</a>
					{{/with_attachment }}
					
					<menu class="section manage list-item" label="Manage">
						<button class="opens-modal-form edit extra tip spot nested-tip tip-addRight"
                                data-tip.position="top-right">
                            <span class="data-title" style="display:none">{{get_text "Buttons.Edit.Content"}}</span>
                        </button>
						<button type="button" 
								name="LearnerInfo.ReferenceTo[{{index}}]_delete_btn" 
								class="attachment delete tip spot nested-tip tip-addRight"
								data-tip.position="top-right"
								data-rel-section="SkillsPassport.LearnerInfo.ReferenceTo[{{index}}]"
								data-rel-help-section="Help.Delete.ECV.Attachment"
								data-rel-view="Compose:LearnerInfo.ReferenceTo"
								data-rel-index="{{index}}"
								data-rel-document="ECV">
							<span class="data-title" style="display:none;">{{get_text "Delete.Attachment" group="EditorHelp"}}</span>	
						</button>
					</menu>
					
					{{#if_gt ../../SkillsPassport.LearnerInfo.ReferenceTo.length compare="1"}}
<!-- 						<span class="sortable_placeholder tip spot" data-tip.position="top-left" -->
<!-- 								  data-title="{{get_text "Reorder.List.Sections" group="EditorHelp"}}"> -->
<!-- 								  <span class="data-title" style="display:none;">{{get_text "Reorder.List.Sections" group="EditorHelp"}}</span>	 -->
<!-- 								  +</span> -->
								  
						<button type="button"
								name="move_up"
								class="sort-move-up {{#if_eq index compare="0"}}inactive{{else}}tip spot tip-removeLeft--10pixels{{/if_eq}}"
						        data-tip.position="top-left">
						        <span>UP</span>
						         <span class="data-title" style="display:none;">{{get_text "Move.Sort.Upwards" group="EditorHelp"}}</span>
						        </button>
						<button type="button"
								name="move_down"
								class="sort-move-down {{#if_last_item ../../SkillsPassport.LearnerInfo.ReferenceTo.length compare=index}}inactive{{else}}tip spot tip-removeLeft--10pixels{{/if_last_item}}"
						        data-tip.position="top-left">
								<span>DOWN</span>
								<span class="data-title" style="display:none;">{{get_text "Move.Sort.Downwards" group="EditorHelp"}}</span>
								</button>
						
						{{#if_last_item ../../SkillsPassport.LearnerInfo.ReferenceTo.length compare=index}}
							<button type="button"
							        name="move_top"
							        class="sort-move-top tip spot tip-removeLeft--10pixels"
							        data-tip.position="top-left">
							        <span>TOP</span>
							        <span class="data-title" style="display:none;">{{get_text "Move.Sort.ToTop" group="EditorHelp"}}</span>
						            </button>
						{{/if_last_item}}
						
					{{/if_gt}}
				</li>
		{{/each_with_index}}
		
		<li class="compose-list empty">
			<button type="button" 
					name="Attachment_add_btn" 
					class="section compose-list opens-modal-form add"
					data-rel-doc="attachment"
					data-rel-clazz="AttachmentFormView"
					data-rel-form="Form:Attachment"
					data-rel-section="SkillsPassport.LearnerInfo.ReferenceTo"
					data-rel-help-section="Help.Add.ECV.Attachment"
					data-rel-document="ECV"
					data-rel-index="{{SkillsPassport.LearnerInfo.ReferenceTo.length}}">
				<span class="img-placeholder">&nbsp;</span>
				<span>
				{{#if_lt SkillsPassport.LearnerInfo.ReferenceTo.length compare="1"}}
					{{get_text "Buttons.Add.Content" group="GuiLabel"}}
				{{/if_lt}}
				{{#if_gteq SkillsPassport.LearnerInfo.ReferenceTo.length compare="1"}}
					{{get_text "Buttons.Add.Content.Not.Empty.Annexes" group="GuiLabel"}}
				{{/if_gteq}}
				</span>
			</button>
				
		</li>
	{{/isEmptyObject}}
</ol>
